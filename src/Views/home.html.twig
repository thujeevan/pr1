{% extends 'common/layout.html.twig' %}

{% block content %}
<div class="jumbotron">
    <h1>Payment gateway</h1>
    <p class="lead">Do your payment with paypal or braintree</p>
</div>

<div>
    {% if messages %}
        {% for message in messages %}
            <div class="alert alert-{{ message[0] }} alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ message[1] | nl2br }}
            </div>
        {% endfor %}
    {% endif %}
</div>

<div class="row marketing">
    <form class="form-horizontal" action="{{ path('index.process') }}" method="post" id="payment-form">
        <fieldset>
            <legend>Order</legend>
            <div class="form-group">
                <label for="fullname" class="col-sm-3 control-label">Full Name</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="fullname" name="fullname" placeholder="Full name">
                </div>
            </div>
            <div class="form-group">
                <label for="price" class="col-sm-3 control-label">Price</label>
                <div class="col-sm-9">                    
                    <div class="row">
                        <div class="col-xs-8">
                            <input type="text" class="form-control" id="price" name="price" placeholder="Price">
                        </div>
                        <div class="col-xs-4">
                            <select class="form-control" id="currency" name="currency">
                                {% for cur in currencies %}
                                    <option value="{{ cur }}">{{ cur | upper }}</option>
                                {% endfor %}
                            </select>                   
                        </div>
                    </div>                    
                </div>
            </div>
        </fieldset>
        <fieldset>
            <legend>Payment</legend>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="card-holder-name">Name on Card</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" name="card-holder-name" id="card-holder-name" placeholder="Card Holder's Name" autocomplete="off">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="card-number">Card Number</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" name="card-number" id="card-number" placeholder="Credit Card Number" autocomplete="off">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="expiry-month">Expiration Date</label>
                <div class="col-sm-9">
                    <div class="row">
                        <div class="col-xs-3">
                            <select class="form-control col-sm-2" name="expiry-month" id="expiry-month">
                                <option>Month</option>
                                {% for key , month in months %}
                                    <option value="{{ key }}">{{ month }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-xs-3">
                            <select class="form-control" name="expiry-year">
                                {% for year in years %}
                                    <option value="{{ year }}">{{ 20~year }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="cvv">Card CVV</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" name="cvv" id="cvv" placeholder="Security Code" autocomplete="off">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <button type="submit" class="btn btn-success">Pay Now</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>
{% endblock %}